@model NotePlot.Models.Parameter

@{
    string atr_checked = "checked";
}

@section styles{
    <style>
        #np_parameter_edit fieldset {
            border: 1px solid #ccc;
            background: #f8f8f8;
        }

            #np_parameter_edit fieldset legend {
                font-weight: bold;
            }

        .np_label {
            display: block;
        }

        #np_parameter_edit p {
            margin: 0;
        }
    </style>
}


<form id="np_parameter_edit" method="POST" action=@ViewBag.Action>
    @Html.AntiForgeryToken()
    <input type="submit" value="Save" />
    <fieldset>
        <legend>Параметр</legend>
        <input type="hidden" id="ParameterID" name="ParameterID" value=@Model.ParameterID />
        <input type="hidden" id="ParameterGroupID" name="ParameterGroupID" value=@Model.ParameterGroupID/>
        <input type="hidden" id="ParameterUnitID" name="ParameterUnitID"  value=@Model.ParameterUnitID/>
        <input type="hidden" id="ParameterValueTypeID" name="ParameterValueTypeID" value=@Model.ParameterValueTypeID/>
        <input type="hidden" id="LoginID" name="LoginID" value=@Model.LoginID/>
        <label class="lookupField">
            <span class="button">Группа</span>
            <mark>Группа не выбрана</mark>
            <input type="text">
        </label>
        <p>
            <input type="button" class="np_label1 openDialog" value="Группа" href="/ParameterGroup/ListDialog" np_dialog_title = "Выбор группы" np_dialog_width ="500px">
            <input type="text" readonly id="ParameterGroupShortName" name="ParameterGroupShortName" size="24" value=@Model.ParameterGroupShortName/>
        </p>
        <p>
            <label for="ParameterShortName" class="np_label">Название</label>
            <input type="text" id="ParameterShortName" name="ParameterShortName" placeholder="Название" size="24" value="@Model.ParameterShortName"/>
        </p>
        <p>
            <label for="ParameterName" class="np_label">Описание</label>
            <input type="text" id="ParameterName" name="ParameterName" size="48"  value="@Model.ParameterName"/>
        </p>
        <p>
            <input type="button" class="np_label1 openDialog" value="Ед.Изм." href="/Unit/ListDialog" np_dialog_title = "Выбор ед.изм" np_dialog_width ="600px"/>
            <input type="text" readonly id="ParameterUnitShortName" name="ParameterUnitShortName" size="16" value="@Model.ParameterUnitShortName" />            
        </p>
        @foreach (NotePlot.Models.ParameterType pt in @ViewBag.ListType)
        {
                <p>
                    <input type="radio" id="ParameterTypeID_@pt.ParameterTypeID" name="ParameterTypeID" value=@pt.ParameterTypeID @if(pt.ParameterTypeID == Model.ParameterTypeID) { @atr_checked } />
                    <label for="ParameterTypeID_@pt.ParameterTypeID">@pt.ParameterTypeName</label>
                </p>
        }
        <p>
            <input type="button" value="Тип значения" class="openDialog" href="/ParamValueType/ListDialog" np_dialog_title = "Выбор типа значения" np_dialog_width ="600px"/>
            <input type="text" readonly id="ParameterValueTypeShortName" name="ParameterValueTypeShortName" size="24" />
        </p>
        <p>
            <label for="ParameterValueMax" class="np_label">Макс. значение</label>
            <input type="text" id="ParameterValueMax" name="ParameterValueMax" size="28" />
        </p>
        <p>
            <label for="ParameterValueMin" class="np_label">Мин. значение</label>
            <input type="text" id="ParameterValueMin" name="ParameterValueMin" size="28" />
        </p>
    </fieldset>
    <p id="relationSection">
    @if (Model.ParameterTypeID > 0)
    {
        @await Component.InvokeAsync("ParamRelations", new { ParameterID = @Model.ParameterID })
    } 
    </p>
</form>
@section scripts{
    <script type="text/javascript">
        $(function () {
            var wrapper = $(".lookupField"),
                inp = wrapper.find("input"),
                btn = wrapper.find(".button"),
                lbl = wrapper.find("mark");

            // Crutches for the :focus style:
            inp.focus(function () {
                wrapper.addClass("focus");
            }).blur(function () {
                wrapper.removeClass("focus");
            });

            var file_api = (window.File && window.FileReader && window.FileList && window.Blob) ? true : false;

            inp.change(function () {
                var i = 0;
            }).change();

            $('input:radio[name = "ParameterTypeID"]').on('change', function (e) {
                e.preventDefault();
                if ($(this).val() > 0) {
                    //alert($(this).val());
                    var container = $("#relationSection");                    
                    $.get("/Parameter/LoadRelations", { id: "1" },function (data) { container.html(data); });
                }
                else //чистим секцию связей
                    $("#relationSection").empty();
            });
        });
        $(window).resize(function () {
            $(".lookupField input").triggerHandler("change");
        });
</script>
}