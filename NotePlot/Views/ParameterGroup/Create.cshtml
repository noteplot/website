            alert('OK');
        $("#loginInput").bind('submit',adata,np_AjaxFormSubmit);
        }
        */
        //$("#ParameterGroupCreate").bind('submit',np_AjaxFormSubmit);

        var adata = new Object();
        adata.onSuccess = function () {
            location.reload();
        }
        $("#group_edit").bind('submit', adata, np_AjaxFormSubmit);
        //$("#group_edit").bind('submit', np_AjaxFormSubmit);
        // очистка сообщений об ошибках по клику
        $("#group_edit").bind('click', np_AjaxFormInputClick);
        $("#group_edit")
            .validate({
                rules: {
                    ParameterGroupShortName: {
                        required: true,
                        minlength: 2
                    },
                    ParameterGroupName: {
                        required: true,
                        minlength: 2
                    }
                }
            });

        function np_AjaxOnSuccess(data) {
            alert('OK');
        };
    });

</script>