@model NotePlot.Models.ParameterGroup

<form asp-action="Create" id="group_edit">
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="col-md-10">
            <input type="hidden" asp-for="ParameterGroupID" class="form-control" />                
        </div>
        <label asp-for="ParameterGroupShortName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ParameterGroupShortName" class="form-control" />                
        </div>
        <label asp-for="ParameterGroupName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ParameterGroupName" class="form-control" />                
        </div>
        <div class="col-md-10">
            <input type="hidden" asp-for="LoginID" class="form-control" />                
        </div>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</form>

<script type="text/javascript">
    $(function () {
        // подписка на submit
        /*
        //Пример передачи обработчиков через методы класса
